# Application
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/provenance.db

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Detection
TEXT_DETECTION_MODEL=roberta-base
IMAGE_DETECTION_MODEL=resnet50
MAX_TEXT_LENGTH=50000
MAX_IMAGE_SIZE_MB=10
MAX_AUDIO_SIZE_MB=25
MAX_VIDEO_SIZE_MB=150
MAX_BATCH_ITEMS=50

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MEDIA_REQUESTS=40
RATE_LIMIT_BATCH_REQUESTS=20
RATE_LIMIT_INTEL_REQUESTS=20

# API key and spend controls
REQUIRE_API_KEY=false
API_KEY_HEADER=X-API-Key
API_KEYS=[]
DAILY_SPEND_CAP_POINTS=1000
SPEND_COST_TEXT=1
SPEND_COST_IMAGE=3
SPEND_COST_AUDIO=4
SPEND_COST_VIDEO=6
SPEND_COST_BATCH=5
SPEND_COST_INTEL=8

# X intelligence collection
X_BEARER_TOKEN=
X_API_BASE_URL=https://api.x.com/2
X_REQUEST_TIMEOUT_SECONDS=20
X_MAX_PAGES=6

# Provider consensus adapters
CONSENSUS_ENABLED=true
CONSENSUS_THRESHOLD=0.5
PROVIDER_TIMEOUT_SECONDS=8
PROVIDER_INTERNAL_WEIGHT=0.6
PROVIDER_COPYLEAKS_WEIGHT=0.15
PROVIDER_REALITY_DEFENDER_WEIGHT=0.15
PROVIDER_C2PA_WEIGHT=0.1
COPYLEAKS_API_KEY=
COPYLEAKS_API_URL=https://api.copyleaks.com/v1/ai-content/detect
REALITY_DEFENDER_API_KEY=
REALITY_DEFENDER_API_URL=https://api.realitydefender.com/v1/detect
C2PA_ENABLED=true

# Scheduled X pipeline
SCHEDULER_ENABLED=false
SCHEDULER_HANDLES=[]
SCHEDULER_INTERVAL_MINUTES=1440
SCHEDULER_WINDOW_DAYS=14
SCHEDULER_MAX_POSTS=250
SCHEDULER_QUERY=
SCHEDULER_RETRY_ATTEMPTS=3
SCHEDULER_RETRY_BACKOFF_SECONDS=5
SCHEDULER_OUTPUT_DIR=evidence/runs/scheduled
SCHEDULER_SEND_WEBHOOKS=true

# Webhooks
WEBHOOK_URLS=[]
WEBHOOK_TIMEOUT_SECONDS=6
WEBHOOK_SECRET=
WEBHOOK_PUSH_INTEL_ALERTS=true

# Calibration tracking
CALIBRATION_REPORTS_DIR=evidence/calibration
