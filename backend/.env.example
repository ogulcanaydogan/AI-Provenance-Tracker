# Application
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/provenance.db

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Detection
TEXT_DETECTION_MODEL=roberta-base
IMAGE_DETECTION_MODEL=resnet50
MAX_TEXT_LENGTH=50000
MAX_IMAGE_SIZE_MB=10
MAX_AUDIO_SIZE_MB=25
MAX_VIDEO_SIZE_MB=150
MAX_BATCH_ITEMS=50

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# X intelligence collection
X_BEARER_TOKEN=
X_API_BASE_URL=https://api.x.com/2
X_REQUEST_TIMEOUT_SECONDS=20
X_MAX_PAGES=6
