# ============================================
# AI Provenance Tracker - Environment Variables
# ============================================
# Copy this file to .env and fill in values

# Ports
FRONTEND_PORT=3020
BACKEND_PORT=8010
POSTGRES_PORT=5433
REDIS_PORT=6380

# Backend (prefix: APT_)
APT_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/provenance
APT_REDIS_URL=redis://localhost:6380/0
APT_DEBUG=true
APT_CORS_ORIGINS=["http://localhost:3020"]
APT_RATE_LIMIT_PER_MINUTE=60
APT_MODEL_CACHE_DIR=./model_cache
APT_MAX_TEXT_LENGTH=50000
APT_MAX_IMAGE_SIZE_MB=10
APT_MAX_AUDIO_SIZE_MB=25
APT_MAX_VIDEO_SIZE_MB=150
APT_MAX_BATCH_ITEMS=50
APT_X_BEARER_TOKEN=
APT_X_API_BASE_URL=https://api.x.com/2

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8010
